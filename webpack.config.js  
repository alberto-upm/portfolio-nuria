const path = require('path');
const HtmlWebpackPlugin = require('html-webpack-plugin');
const { CleanWebpackPlugin } = require('clean-webpack-plugin');

module.exports = {
  // Punto de entrada de la aplicación
  entry: './src/index.js',

  // Configuración de la salida
  output: {
    path: path.resolve(__dirname, 'dist'),  // Carpeta de salida
    filename: 'bundle.js',                  // Nombre del archivo de salida
    publicPath: '/'                         // Ruta pública para el servidor
  },

  // Modo de Webpack
  mode: 'development', // Cambia a 'production' para la compilación de producción

  // Configuración del módulo
  module: {
    rules: [
      {
        test: /\.js$/,                      // Test para archivos JS
        exclude: /node_modules/,            // Excluir la carpeta node_modules
        use: {
          loader: 'babel-loader',           // Utilizar babel-loader para transpilar el código
          options: {
            presets: ['@babel/preset-env', '@babel/preset-react']  // Configuración de presets para Babel
          }
        }
      },
      {
        test: /\.css$/,                     // Test para archivos CSS
        use: ['style-loader', 'css-loader'] // Utilizar style-loader y css-loader
      },
      {
        test: /\.(png|svg|jpg|jpeg|gif)$/i, // Test para archivos de imagen
        type: 'asset/resource',             // Utilizar el tipo de recurso de Webpack 5
      }
    ]
  },

  // Configuración de plugins
  plugins: [
    new CleanWebpackPlugin(),               // Plugin para limpiar la carpeta de salida
    new HtmlWebpackPlugin({
      template: './public/index.html',      // Plantilla HTML
      filename: 'index.html'                // Nombre del archivo de salida HTML
    })
  ],

  // Configuración del servidor de desarrollo
  devServer: {
    contentBase: path.join(__dirname, 'dist'),  // Carpeta base para el servidor
    compress: true,                            // Habilitar compresión gzip
    port: 9000,                                // Puerto del servidor
    historyApiFallback: true                   // Habilitar la navegación por la historia del navegador
  }
};
